<picture>
  {{#each this.sourcesSorted as |s|}}
    <source
      srcset={{s.srcset}}
      type={{s.mimeType}}
      sizes={{s.sizes}}
    />
  {{/each}}
  <img
    src={{this.src}}
    width={{this.width}}
    height={{this.height}}
    class="eri-{{this.layout}}"
    loading="lazy"
    ...attributes
    {{style (if this.showLqipImage (hash background-image=this.lqipImage background-size="cover"))}}
    {{on "load" this.onLoad}}
  />
</picture>