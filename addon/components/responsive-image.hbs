<picture>
  {{#each this.sourcesSorted as |s|}}
    <source
      srcset={{s.srcset}}
      type={{s.mimeType}}
      sizes={{s.sizes}}
    />
  {{/each}}
  <img
    src={{this.src}}
    width={{this.width}}
    height={{this.height}}
    class={{this.classNames}}
    loading="lazy"
    decoding="async"
    ...attributes
    data-eri-bh={{this.blurhash}}
    data-eri-bh-w={{this.meta.lqip.width}}
    data-eri-bh-h={{this.meta.lqip.height}}
    {{style
      (if this.showLqipBlurhash (hash background-image=this.lqipBlurhash background-size="cover"))
    }}
    {{on "load" this.onLoad}}
  />
</picture>